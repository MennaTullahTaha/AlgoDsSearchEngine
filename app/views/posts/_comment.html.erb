<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<%= stylesheet_link_tag "posts.css" %>
<div class="container mb80">
    <%@comments.each do |comment|%>
        <div class="page-timeline">
            <div class="vtimeline-point">
                <div class="vtimeline-icon">
                    <i class="fa fa-image"></i>
                </div>
                <div class="vtimeline-block">
                    <span class="vtimeline-date"><%=comment.created_at%></span><div class="vtimeline-content">
                        <ul class="post-meta list-inline">
                            <li class="list-inline-item">
                                <i class="fa fa-user-circle-o"></i> <a href="#">Comment by <%= link_to comment.user.username, user_path(comment.user) if comment.user %></a>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-calendar-o"></i> <a href="#"><%=comment.updated_at%></a>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-tags"></i> <a href="#">Bootstrap4</a>
                            </li>
                        </ul>
                        <p>
                            <%=comment.body%>
                        </p><br>
                        <%if logged_in? && comment.user == current_user%>
                            <%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-outline-secondary btn-sm"%>
                            <%= link_to 'Delete', comment_path(comment), class: "btn btn-outline-secondary btn-sm", method: :delete, data: { confirm: "Are you sure?" } %>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    <%end%>
</div>


