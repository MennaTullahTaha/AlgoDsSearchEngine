        <li><%= link_to 'Favourite posts', display_favourite_posts_path, class: "dropdown-item nav-link"%></li>
                           
        </li>
        <li class="nav-item">
          <%= link_to 'Logout', signout_path, class: "nav-link", method: :delete %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Log in', signin_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', signup_path, class: "nav-link" %>
