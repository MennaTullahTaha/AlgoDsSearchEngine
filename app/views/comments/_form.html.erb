<%= stylesheet_link_tag "custom.css" %>

<div class="container">

  <%= render 'shared/errors', obj: @comment %>

  <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(model: @comment, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
            <%= f.hidden_field :post_id, value: params[:post_id] %>
              <div class="form-group row">
                  <%= f.label :body, class: "col-2 col-form-label text-light" %>
                  <div class="col-10"> 
                  <%= f.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Content of Post" %>
                  </div>
              </div>
              <div class="form-group row justify-content-center">
                  <%= f.submit class: "btn btn-outline-light btn-lg" %>
              </div>
        <%end%>
      </div>
    </div>
  </div>