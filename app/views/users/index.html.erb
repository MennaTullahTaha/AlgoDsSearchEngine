<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<%= stylesheet_link_tag "posts.css" %>
<div class="container mb80">
    <%@users.each do |user|%>
        <div class="page-timeline">
            <div class="vtimeline-point">
                <div class="vtimeline-icon">
                    <i class="fa fa-image"></i>
                </div>
                <div class="vtimeline-block">
                    <span class="vtimeline-date"><%=user.created_at%></span><div class="vtimeline-content">
                        <a href="#"><h3><%=user.username%></h3></a>
                        <ul class="post-meta list-inline">
                            <li class="list-inline-item">
                                <i class="fa fa-calendar-o"></i> <a href="#"><%=user.updated_at%></a>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-tags"></i> <a href="#">Bootstrap4</a>
                            </li>
                        </ul>
                        <p>
                            <%=user.email%>
                        </p><br>
                        <%= link_to 'Show', user_path(user), class: "btn btn-outline-secondary btn-sm"%>
                        <%if logged_in? && user == current_user%>
                            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-secondary btn-sm"%>
                            <%= link_to 'Delete', user_path(user), class: "btn btn-outline-secondary btn-sm", method: :delete, data: { confirm: "Are you sure?" } %>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    <%end%>
</div>
<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>


